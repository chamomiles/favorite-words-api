<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/normalize.css">
    <title>My Favorite Words</title>
  </head>
  <body>

    <h2>My Favorite Words!</h2>

    <ul class="words">
      <% for (const word of words) { %>
        <li class="word">
          <h4><%= word %></h4>
        </li>
      <% } %>
    </ul>

    <section class="forms">
      <form action="/api/words" method="POST">
        <h3>Add word</h3>
        <label> Word:
          <input type="text" name="word">
        </label>
        <label> Definition:
          <input type="text" name="definition">
        </label>
        <input type="submit">
      </form>
      
      <form class="unavailable" action="/api/words" method="PUT">
        <h3>Change word</h3>
        <label> Old word:
          <input type="text" name="oldWord">
        </label>
        
        <label> New word:
          <input type="text" name="newWord">
        </label>
        
        <label> Definition:
          <input type="text" name="definition">
        </label>
        
        <input type="submit">
    </form>

    <form class="unavailable" action="/api/words" method="DELETE">
      <h3>Delete word</h3>
      <label> Word:
        <input type="text" name="word">
      </label>
      
      <input type="submit">
  </form>

  </section>
    
    <script src="js/main.js"></script>
  </body>
  </html>